drop database usersDB;
create schema usersDB;
use usersDB;

create table buyers
(
    `buyer id` int primary key,
     name varchar(50),
     email varchar(50),
    `phone number` bigint,
     password varchar(50),
    `creed member` BOOLEAN,
    `reward points` int,
    `credit` bigint
);

#Nykaa style reqRD AYATEM
