create table sellers
(
    `seller id` integer primary key,
     name varchar(50),
     email varchar(100),
    `phone number` bigint,
     password varchar(50),
     pause BOOLEAN

create table cart
(
   `buyer id` int primary key,
   `product id` int primary key,
    quantity int
);

create table wishlist
(
   `buyer id` int primary key,
   `product id` int primary key,
    quantity int
);

commit;


select * from buyers;